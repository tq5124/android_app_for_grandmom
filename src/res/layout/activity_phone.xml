<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <TextView 
        android:id="@+id/phone_title"
        android:text="@string/mostUsedPerson"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <!-- 注：以下应是代码生成 -->
    <Button 
        android:id="@+id/phone_list_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="给“XXX”打电话"
        android:gravity="left|center_vertical"/>
    
    <Button 
        android:id="@+id/phone_list_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="给“XXX”打电话"
        android:gravity="left|center_vertical"/>
    
    <!-- 注：以上应是代码生成 -->
    
    <TextView 
        android:id="@+id/phone_call_other_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="或者"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
    
    <Button 
        android:id="@+id/phone_call_other_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自己输入电话号码"
        android:gravity="left|center_vertical"/>
    
</LinearLayout>